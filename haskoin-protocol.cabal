name:                haskoin-protocol
version:             0.1.1.0
synopsis:            Implementation of the Bitcoin network protocol messages
-- description:         
homepage:            http://github.com/plaprade/haskoin-protocol
license:             PublicDomain
license-file:        UNLICENSE
author:              Philippe Laprade
maintainer:          plaprade@gmail.com
category:            Bitcoin
build-type:          Simple
cabal-version:       >= 1.9.2

library
    exposed-modules:   Haskoin.Protocol,
                       Haskoin.Protocol.Arbitrary
    other-modules:     Haskoin.Protocol.Message,
                       Haskoin.Protocol.VarInt,
                       Haskoin.Protocol.BlockHeader,
                       Haskoin.Protocol.Addr, 
                       Haskoin.Protocol.Tx, 
                       Haskoin.Protocol.NotFound, 
                       Haskoin.Protocol.NetworkAddress, 
                       Haskoin.Protocol.Inv, 
                       Haskoin.Protocol.VarString, 
                       Haskoin.Protocol.GetBlocks, 
                       Haskoin.Protocol.Ping, 
                       Haskoin.Protocol.Script, 
                       Haskoin.Protocol.InvVector, 
                       Haskoin.Protocol.Alert, 
                       Haskoin.Protocol.MessageHeader, 
                       Haskoin.Protocol.Block, 
                       Haskoin.Protocol.Version, 
                       Haskoin.Protocol.GetData, 
                       Haskoin.Protocol.Headers, 
                       Haskoin.Protocol.GetHeaders
    build-depends:     base == 4.6.*, 
                       binary == 0.7.*, 
                       bytestring == 0.10.*, 
                       haskoin-util == 0.1.*,
                       haskoin-crypto == 0.1.*,
                       QuickCheck == 2.6.*
    hs-source-dirs:    src
    ghc-options:       -O2

Test-Suite test-haskoin-protocol
    type:              exitcode-stdio-1.0
    main-is:           Main.hs
    build-depends:     base == 4.6.*,
                       binary == 0.7.*, 
                       bytestring == 0.10.*, 
                       haskoin-util == 0.1.*,
                       haskoin-crypto == 0.1.*,
                       QuickCheck == 2.6.*,
                       test-framework == 0.8.*,
                       test-framework-quickcheck2 == 0.3.*,
                       test-framework-hunit == 0.3.*,
                       HUnit == 1.2.*
